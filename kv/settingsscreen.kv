#: import utils kivy.utils

<SettingsScreen>:
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#FAF9F6")
            Rectangle:
                size: self.size
                pos: self.pos
        GridLayout:
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#000000")
                Rectangle:
                    size: self.size
                    pos: self.pos
            pos_hint: {"center_x": .5, "center_y": .95}
            size_hint: 1, .1
        Label:
            text:
                "Settings"
            font_size: 20
            bold: True
            color: "#FAF9F6"
            pos_hint: {"center_x": .5, "center_y": .95}
            size_hint: 1, .1
        Button:
            text:
                "Return to home screen"
            font_size: 15
            background_color: "#000000"
            on_release:
                app.change_screen("home_screen")
            pos_hint: {"center_x": .5, "center_y": .5}
            size_hint: .65, .1